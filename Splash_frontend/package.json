{
  "name": "logo_vs_app",
  "productName": "Logo-VS-App",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "react-scripts start",
    "electron:dist": "npm run build && electron-builder",
    "electron": "electron .",
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BerkSZc/Logo-Spring"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "axios": "^1.13.0",
    "electron-updater": "^6.6.2",
    "jwt-decode": "^4.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.9.4",
    "tailwindcss": "^4.1.16",
    "zustand": "^5.0.8"
  },
  "build": {
    "appId": "com.logo-vs.app",
    "productName": "Logo-VS-App",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "backend.jar"
    ],
    "extraResources": [
      {
        "from": "backend.jar",
        "to": "."
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "BerkSZc",
        "repo": "Logo-Spring",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Logo VS"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10",
    "vite": "^7.1.7"
  },
  "description": "This template provides a minimal setup to get React working in Vite with HMR and some ESLint rules.",
  "keywords": [],
  "author": "Berk Sözcü",
  "license": "ISC"
}
